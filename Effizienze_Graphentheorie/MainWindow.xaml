<Window x:Class="Effizienze_Graphentheorie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="1200">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height ="20"></RowDefinition>
            <RowDefinition Height="91*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="0" Background="White" Name="text">Please generate a graph</TextBlock>
        <Canvas Name="canvas" Grid.Column="1" Grid.Row="1" Background="White" Grid.RowSpan="2"></Canvas>
        <Button Height="50" Click="GenerateGraph" Margin="0,0,0,152" Grid.RowSpan="2">Generate Graph</Button>
    </Grid>
</Window>
